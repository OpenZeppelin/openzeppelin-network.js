{
  "name": "@openzeppelin/network",
  "version": "0.1.2",
  "description": "An easy to use and reliable library that provides one line access to Web3 API.",
  "main": "./lib/index.js",
  "files": [
    "lib"
  ],
  "scripts": {
    "prepare": "npm run compile",
    "compile": "tsc",
    "watch": "tsc -w",
    "lint": "tsc --noEmit && eslint '*/**/*.{js,ts}' --quiet --fix",
    "test": "jest --verbose"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/OpenZeppelin/openzeppelin-network.js.git"
  },
  "keywords": [
    "react",
    "react-hooks",
    "hooks",
    "ethereum",
    "solidity",
    "javascript",
    "web3",
    "context",
    "frontend",
    "dapp",
    "metamask",
    "infura"
  ],
  "author": "Igor Yalovoy <igor@openzeppelin.com>",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/OpenZeppelin/openzeppelin-network.js/issues"
  },
  "homepage": "https://github.com/OpenZeppelin/openzeppelin-network.js#readme",
  "devDependencies": {
    "@types/jest": "^24.0.15",
    "@types/react": "^16.8.23",
    "@types/web3": "^1.0.18",
    "@typescript-eslint/eslint-plugin": "^1.9.0",
    "@typescript-eslint/parser": "^1.9.0",
    "eslint": "^5.16.0",
    "eslint-config-prettier": "^4.3.0",
    "eslint-plugin-prettier": "^3.1.0",
    "husky": "^2.4.0",
    "jest": "^24.8.0",
    "prettier": "^1.18.2",
    "react": "^16.8.6",
    "ts-jest": "^24.0.2",
    "typescript": "^3.4.5"
  },
  "dependencies": {
    "@openzeppelin/gsn-provider": "github:OpenZeppelin/openzeppelin-gsn-provider",
    "ethereumjs-wallet": "^0.6.3",
    "web3": "^1.2.0"
  },
  "husky": {
    "hooks": {
      "pre-commit": "npm run lint && npm run test"
    }
  }
}
